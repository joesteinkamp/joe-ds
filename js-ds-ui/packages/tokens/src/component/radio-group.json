      "border-color": { "$type": "color", "$value": "{color.border.default}", "$description": "Radio button border color" },
      "checked-border": { "$type": "color", "$value": "{color.interactive.primary}", "$description": "Radio button checked border" },
      "indicator-color": { "$type": "color", "$value": "{color.interactive.primary}", "$description": "Radio button indicator dot color" },
      "focus-ring": { "$type": "color", "$value": "{color.border.focus}", "$description": "Radio button focus ring color" },
      "size": { "$type": "dimension", "$value": "1.25rem", "$description": "Radio button size" },
      "indicator-size": { "$type": "dimension", "$value": "0.625rem", "$description": "Radio button indicator dot size" },
      "gap": { "$type": "dimension", "$value": "{space.component.gap.sm}", "$description": "Gap between radio items" },
