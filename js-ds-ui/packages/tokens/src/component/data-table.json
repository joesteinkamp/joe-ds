{
  "$description": "Component-specific tokens for DataTable",
  "component": {
    "data-table": {
      "bg": { "$type": "color", "$value": "{color.background.primary}", "$description": "Table background color" },
      "text": { "$type": "color", "$value": "{color.text.primary}", "$description": "Table cell text color" },
      "header-text": { "$type": "color", "$value": "{color.text.tertiary}", "$description": "Table header text color" },
      "border-color": { "$type": "color", "$value": "{color.border.default}", "$description": "Table row border color" },
      "row-hover-bg": { "$type": "color", "$value": "{color.background.secondary}", "$description": "Table row hover background" },
      "row-selected-bg": { "$type": "color", "$value": "{color.background.secondary}", "$description": "Table row selected background" },
      "empty-text": { "$type": "color", "$value": "{color.text.tertiary}", "$description": "Table empty state text color" },
      "pagination-text": { "$type": "color", "$value": "{color.text.tertiary}", "$description": "Table pagination text color" },
      "cell-padding": { "$type": "dimension", "$value": "{space.component.padding.md}", "$description": "Table cell padding" },
      "header-height": { "$type": "dimension", "$value": "3rem", "$description": "Table header row height" },
      "font": {
        "size": { "$type": "dimension", "$value": "{typography.size.sm}", "$description": "Table text size" },
        "header-weight": { "$type": "fontWeight", "$value": "{typography.weight.medium}", "$description": "Table header font weight" }
      }
    }
  }
}
