{
  "$description": "Component-specific tokens for Breadcrumb",
  "component": {
    "breadcrumb": {
      "text": { "$type": "color", "$value": "{color.text.secondary}", "$description": "Breadcrumb link text color" },
      "text-hover": { "$type": "color", "$value": "{color.text.primary}", "$description": "Breadcrumb link hover text color" },
      "current-text": { "$type": "color", "$value": "{color.text.primary}", "$description": "Breadcrumb current page text color" },
      "separator-text": { "$type": "color", "$value": "{color.text.tertiary}", "$description": "Breadcrumb separator color" },
      "gap": { "$type": "dimension", "$value": "{space.component.gap.xs}", "$description": "Breadcrumb item gap" },
      "font": {
        "size": { "$type": "dimension", "$value": "{typography.size.sm}", "$description": "Breadcrumb text size" },
        "weight": { "$type": "fontWeight", "$value": "{typography.weight.medium}", "$description": "Breadcrumb current page font weight" }
      }
    }
  }
}
