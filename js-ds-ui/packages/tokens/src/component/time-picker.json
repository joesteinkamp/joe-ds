{
  "$description": "Component-specific tokens for TimePicker",
  "component": {
    "time-picker": {
      "trigger-bg": { "$type": "color", "$value": "{color.background.primary}", "$description": "Time picker trigger background" },
      "trigger-text": { "$type": "color", "$value": "{color.text.primary}", "$description": "Time picker trigger text" },
      "trigger-placeholder": { "$type": "color", "$value": "{color.text.tertiary}", "$description": "Time picker placeholder text" },
      "trigger-border": { "$type": "color", "$value": "{color.border.default}", "$description": "Time picker trigger border" },
      "content-bg": { "$type": "color", "$value": "{color.background.primary}", "$description": "Time picker content background" },
      "content-border": { "$type": "color", "$value": "{color.border.default}", "$description": "Time picker content border" },
      "item-hover-bg": { "$type": "color", "$value": "{color.background.secondary}", "$description": "Time picker item hover background" },
      "item-selected-bg": { "$type": "color", "$value": "{color.interactive.primary}", "$description": "Time picker selected item background" },
      "item-selected-text": { "$type": "color", "$value": "#FFFFFF", "$description": "Time picker selected item text" },
      "focus-ring": { "$type": "color", "$value": "{color.border.focus}", "$description": "Time picker focus ring" },
      "trigger-height": { "$type": "dimension", "$value": "{size.component.height.md}", "$description": "Time picker trigger height" },
      "border": {
        "radius": { "$type": "dimension", "$value": "0.375rem", "$description": "Time picker border radius" }
      },
      "font": {
        "size": { "$type": "dimension", "$value": "{typography.size.sm}", "$description": "Time picker text size" }
      }
    }
  }
}
