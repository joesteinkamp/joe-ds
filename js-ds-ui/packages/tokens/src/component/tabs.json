{
  "$description": "Component-specific tokens for Tabs",
  "component": {
    "tabs": {
      "list-bg": { "$type": "color", "$value": "{color.background.secondary}", "$description": "Tabs list background" },
      "list-text": { "$type": "color", "$value": "{color.text.secondary}", "$description": "Tabs list inactive text color" },
      "trigger-active-bg": { "$type": "color", "$value": "{color.background.primary}", "$description": "Active tab trigger background" },
      "trigger-active-text": { "$type": "color", "$value": "{color.text.primary}", "$description": "Active tab trigger text color" },
      "focus-ring": { "$type": "color", "$value": "{color.border.focus}", "$description": "Tabs focus ring color" },
      "list-padding": { "$type": "dimension", "$value": "{space.component.padding.xs}", "$description": "Tabs list internal padding" },
      "trigger-padding": {
        "x": { "$type": "dimension", "$value": "{space.component.padding.md}", "$description": "Tab trigger horizontal padding" },
        "y": { "$type": "dimension", "$value": "{space.component.padding.sm}", "$description": "Tab trigger vertical padding" }
      },
      "border": {
        "radius": { "$type": "dimension", "$value": "0.25rem", "$description": "Tab trigger border radius" }
      },
      "font": {
        "size": { "$type": "dimension", "$value": "{typography.size.sm}", "$description": "Tab trigger text size" },
        "weight": { "$type": "fontWeight", "$value": "{typography.weight.medium}", "$description": "Tab trigger font weight" }
      }
    }
  }
}
