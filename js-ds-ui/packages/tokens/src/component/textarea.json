{
  "$description": "Component-specific tokens for Textarea",
  "component": {
    "textarea": {
      "bg": { "$type": "color", "$value": "{color.background.primary}", "$description": "Textarea background color" },
      "text": { "$type": "color", "$value": "{color.text.primary}", "$description": "Textarea text color" },
      "placeholder": { "$type": "color", "$value": "{color.text.tertiary}", "$description": "Textarea placeholder text color" },
      "border-color": { "$type": "color", "$value": "{color.border.default}", "$description": "Textarea border color" },
      "focus-ring": { "$type": "color", "$value": "{color.border.focus}", "$description": "Textarea focus ring color" },
      "error-border": { "$type": "color", "$value": "{color.text.error}", "$description": "Textarea error state border" },
      "size": {
        "sm": {
          "min-height": { "$type": "dimension", "$value": "3.75rem", "$description": "Small textarea minimum height" },
          "padding-x": { "$type": "dimension", "$value": "{space.component.padding.md}", "$description": "Small textarea horizontal padding" },
          "padding-y": { "$type": "dimension", "$value": "{space.component.padding.xs}", "$description": "Small textarea vertical padding" },
          "text": { "$type": "dimension", "$value": "{typography.size.xs}", "$description": "Small textarea text size" }
        },
        "md": {
          "min-height": { "$type": "dimension", "$value": "5rem", "$description": "Medium textarea minimum height (default)" },
          "padding-x": { "$type": "dimension", "$value": "{space.component.padding.md}", "$description": "Medium textarea horizontal padding" },
          "padding-y": { "$type": "dimension", "$value": "{space.component.padding.sm}", "$description": "Medium textarea vertical padding" },
          "text": { "$type": "dimension", "$value": "{typography.size.sm}", "$description": "Medium textarea text size" }
        },
        "lg": {
          "min-height": { "$type": "dimension", "$value": "6.25rem", "$description": "Large textarea minimum height" },
          "padding-x": { "$type": "dimension", "$value": "{space.component.padding.lg}", "$description": "Large textarea horizontal padding" },
          "padding-y": { "$type": "dimension", "$value": "{space.component.padding.md}", "$description": "Large textarea vertical padding" },
          "text": { "$type": "dimension", "$value": "{typography.size.base}", "$description": "Large textarea text size" }
        }
      },
      "border": {
        "radius": { "$type": "dimension", "$value": "0.375rem", "$description": "Textarea border radius" },
        "width": { "$type": "dimension", "$value": "1px", "$description": "Textarea border width" }
      },
      "font": {
        "size": { "$type": "dimension", "$value": "{typography.size.sm}", "$description": "Textarea text size" }
      }
    }
  }
}
