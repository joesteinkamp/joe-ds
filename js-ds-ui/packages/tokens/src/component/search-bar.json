{
  "$description": "Component-specific tokens for SearchBar",
  "component": {
    "search-bar": {
      "bg": { "$type": "color", "$value": "{color.background.primary}", "$description": "Search bar background" },
      "text": { "$type": "color", "$value": "{color.text.primary}", "$description": "Search bar text color" },
      "placeholder": { "$type": "color", "$value": "{color.text.tertiary}", "$description": "Search bar placeholder text" },
      "border-color": { "$type": "color", "$value": "{color.border.default}", "$description": "Search bar border color" },
      "icon-color": { "$type": "color", "$value": "{color.text.tertiary}", "$description": "Search icon color" },
      "focus-ring": { "$type": "color", "$value": "{color.border.focus}", "$description": "Search bar focus ring" },
      "clear-button-text": { "$type": "color", "$value": "{color.text.secondary}", "$description": "Clear button text color" },
      "height": { "$type": "dimension", "$value": "{size.component.height.md}", "$description": "Search bar height" },
      "padding": {
        "x": { "$type": "dimension", "$value": "{space.component.padding.md}", "$description": "Search bar horizontal padding" }
      },
      "border": {
        "radius": { "$type": "dimension", "$value": "0.375rem", "$description": "Search bar border radius" }
      },
      "font": {
        "size": { "$type": "dimension", "$value": "{typography.size.sm}", "$description": "Search bar text size" }
      }
    }
  }
}
