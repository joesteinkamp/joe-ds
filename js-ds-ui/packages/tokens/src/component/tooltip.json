{
  "$description": "Component-specific tokens for Tooltip",
  "component": {
    "tooltip": {
      "bg": { "$type": "color", "$value": "{color.background.primary}", "$description": "Tooltip background color" },
      "text": { "$type": "color", "$value": "{color.text.primary}", "$description": "Tooltip text color" },
      "border-color": { "$type": "color", "$value": "{color.border.default}", "$description": "Tooltip border color" },
      "padding": {
        "x": { "$type": "dimension", "$value": "{space.component.padding.md}", "$description": "Tooltip horizontal padding" },
        "y": { "$type": "dimension", "$value": "{space.component.padding.sm}", "$description": "Tooltip vertical padding" }
      },
      "border": {
        "radius": { "$type": "dimension", "$value": "0.375rem", "$description": "Tooltip border radius" }
      },
      "font": {
        "size": { "$type": "dimension", "$value": "{typography.size.sm}", "$description": "Tooltip text size" }
      }
    }
  }
}
