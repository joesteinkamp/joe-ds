{
  "$description": "Component-specific tokens for Input",
  "component": {
    "input": {
      "bg": { "$type": "color", "$value": "{color.background.primary}", "$description": "Input background color" },
      "text": { "$type": "color", "$value": "{color.text.primary}", "$description": "Input text color" },
      "placeholder": { "$type": "color", "$value": "{color.text.tertiary}", "$description": "Input placeholder text color" },
      "border-color": { "$type": "color", "$value": "{color.border.default}", "$description": "Input border color" },
      "border-hover": { "$type": "color", "$value": "{color.border.hover}", "$description": "Input border hover color" },
      "focus-ring": { "$type": "color", "$value": "{color.border.focus}", "$description": "Input focus ring color" },
      "error-border": { "$type": "color", "$value": "{color.text.error}", "$description": "Input error state border color" },
      "size": {
        "sm": {
          "height": { "$type": "dimension", "$value": "{size.component.height.sm}", "$description": "Small input height" },
          "padding-x": { "$type": "dimension", "$value": "{space.component.padding.md}", "$description": "Small input horizontal padding" },
          "padding-y": { "$type": "dimension", "$value": "{space.component.padding.xs}", "$description": "Small input vertical padding" },
          "text": { "$type": "dimension", "$value": "{typography.size.xs}", "$description": "Small input text size" }
        },
        "md": {
          "height": { "$type": "dimension", "$value": "{size.component.height.md}", "$description": "Medium input height (default)" },
          "padding-x": { "$type": "dimension", "$value": "{space.component.padding.md}", "$description": "Medium input horizontal padding" },
          "padding-y": { "$type": "dimension", "$value": "{space.component.padding.sm}", "$description": "Medium input vertical padding" },
          "text": { "$type": "dimension", "$value": "{typography.size.sm}", "$description": "Medium input text size" }
        },
        "lg": {
          "height": { "$type": "dimension", "$value": "{size.component.height.lg}", "$description": "Large input height" },
          "padding-x": { "$type": "dimension", "$value": "{space.component.padding.lg}", "$description": "Large input horizontal padding" },
          "padding-y": { "$type": "dimension", "$value": "{space.component.padding.md}", "$description": "Large input vertical padding" },
          "text": { "$type": "dimension", "$value": "{typography.size.base}", "$description": "Large input text size" }
        }
      },
      "border": {
        "radius": { "$type": "dimension", "$value": "0.375rem", "$description": "Input border radius" },
        "width": { "$type": "dimension", "$value": "1px", "$description": "Input border width" }
      }
    }
  }
}
