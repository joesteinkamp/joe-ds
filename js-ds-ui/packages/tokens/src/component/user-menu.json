{
  "$description": "Component-specific tokens for UserMenu",
  "component": {
    "user-menu": {
      "trigger-bg": { "$type": "color", "$value": "transparent", "$description": "User menu trigger background" },
      "trigger-hover-bg": { "$type": "color", "$value": "{color.background.secondary}", "$description": "User menu trigger hover background" },
      "content-bg": { "$type": "color", "$value": "{color.background.primary}", "$description": "User menu content background" },
      "content-border": { "$type": "color", "$value": "{color.border.default}", "$description": "User menu content border" },
      "content-text": { "$type": "color", "$value": "{color.text.primary}", "$description": "User menu content text" },
      "item-hover-bg": { "$type": "color", "$value": "{color.background.secondary}", "$description": "User menu item hover background" },
      "separator-color": { "$type": "color", "$value": "{color.border.default}", "$description": "User menu separator color" },
      "label-text": { "$type": "color", "$value": "{color.text.primary}", "$description": "User menu label text" },
      "description-text": { "$type": "color", "$value": "{color.text.secondary}", "$description": "User menu description text" },
      "shortcut-text": { "$type": "color", "$value": "{color.text.tertiary}", "$description": "User menu shortcut text" },
      "focus-ring": { "$type": "color", "$value": "{color.border.focus}", "$description": "User menu focus ring" },
      "padding": { "$type": "dimension", "$value": "{space.component.padding.xs}", "$description": "User menu content padding" },
      "border": {
        "radius": { "$type": "dimension", "$value": "0.375rem", "$description": "User menu border radius" }
      },
      "font": {
        "size": { "$type": "dimension", "$value": "{typography.size.sm}", "$description": "User menu text size" },
        "label-weight": { "$type": "fontWeight", "$value": "{typography.weight.semibold}", "$description": "User menu label font weight" }
      }
    }
  }
}
