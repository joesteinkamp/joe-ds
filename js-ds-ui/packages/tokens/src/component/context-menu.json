{
  "$description": "Component-specific tokens for ContextMenu",
  "component": {
    "context-menu": {
      "bg": { "$type": "color", "$value": "{color.background.primary}", "$description": "Context menu background" },
      "text": { "$type": "color", "$value": "{color.text.primary}", "$description": "Context menu text color" },
      "border-color": { "$type": "color", "$value": "{color.border.default}", "$description": "Context menu border color" },
      "item-hover-bg": { "$type": "color", "$value": "{color.background.secondary}", "$description": "Context menu item hover background" },
      "item-focus-bg": { "$type": "color", "$value": "{color.background.secondary}", "$description": "Context menu item focus background" },
      "separator-color": { "$type": "color", "$value": "{color.border.default}", "$description": "Context menu separator color" },
      "label-text": { "$type": "color", "$value": "{color.text.primary}", "$description": "Context menu label text color" },
      "shortcut-text": { "$type": "color", "$value": "{color.text.tertiary}", "$description": "Context menu shortcut text color" },
      "padding": { "$type": "dimension", "$value": "{space.component.padding.xs}", "$description": "Context menu content padding" },
      "item-padding": {
        "x": { "$type": "dimension", "$value": "{space.component.padding.sm}", "$description": "Context menu item horizontal padding" },
        "y": { "$type": "dimension", "$value": "{space.component.padding.xs}", "$description": "Context menu item vertical padding" }
      },
      "border": {
        "radius": { "$type": "dimension", "$value": "0.375rem", "$description": "Context menu border radius" }
      },
      "font": {
        "size": { "$type": "dimension", "$value": "{typography.size.sm}", "$description": "Context menu text size" },
        "label-weight": { "$type": "fontWeight", "$value": "{typography.weight.semibold}", "$description": "Context menu label font weight" }
      },
      "min-width": { "$type": "dimension", "$value": "8rem", "$description": "Context menu minimum width" }
    }
  }
}
