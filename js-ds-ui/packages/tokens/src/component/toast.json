{
  "$description": "Component-specific tokens for Toast",
  "component": {
    "toast": {
      "default": {
        "bg": { "$type": "color", "$value": "{color.background.primary}", "$description": "Default toast background" },
        "text": { "$type": "color", "$value": "{color.text.primary}", "$description": "Default toast text color" },
        "border": { "$type": "color", "$value": "{color.border.default}", "$description": "Default toast border color" }
      },
      "success": {
        "bg": { "$type": "color", "$value": "{color.background.success}", "$description": "Success toast background" },
        "text": { "$type": "color", "$value": "{color.text.success}", "$description": "Success toast text color" },
        "border": { "$type": "color", "$value": "{color.text.success}", "$description": "Success toast border color" }
      },
      "error": {
        "bg": { "$type": "color", "$value": "{color.background.error}", "$description": "Error toast background" },
        "text": { "$type": "color", "$value": "{color.text.error}", "$description": "Error toast text color" },
        "border": { "$type": "color", "$value": "{color.text.error}", "$description": "Error toast border color" }
      },
      "warning": {
        "bg": { "$type": "color", "$value": "{color.background.warning}", "$description": "Warning toast background" },
        "text": { "$type": "color", "$value": "{color.text.warning}", "$description": "Warning toast text color" },
        "border": { "$type": "color", "$value": "{color.text.warning}", "$description": "Warning toast border color" }
      },
      "action-border": { "$type": "color", "$value": "{color.border.default}", "$description": "Toast action button border color" },
      "action-hover-bg": { "$type": "color", "$value": "{color.background.secondary}", "$description": "Toast action button hover background" },
      "close-text": { "$type": "color", "$value": "{color.text.secondary}", "$description": "Toast close button text color" },
      "focus-ring": { "$type": "color", "$value": "{color.border.focus}", "$description": "Toast focus ring color" },
      "padding": { "$type": "dimension", "$value": "{space.component.padding.lg}", "$description": "Toast padding" },
      "border": {
        "radius": { "$type": "dimension", "$value": "0.5rem", "$description": "Toast border radius" },
        "width": { "$type": "dimension", "$value": "1px", "$description": "Toast border width" }
      },
      "max-width": { "$type": "dimension", "$value": "26.25rem", "$description": "Toast max width" },
      "font": {
        "title-size": { "$type": "dimension", "$value": "{typography.size.sm}", "$description": "Toast title font size" },
        "title-weight": { "$type": "fontWeight", "$value": "{typography.weight.semibold}", "$description": "Toast title font weight" }
      }
    }
  }
}
