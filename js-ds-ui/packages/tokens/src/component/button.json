{
  "$description": "Component-specific tokens for Button",
  "component": {
    "button": {
      "primary": {
        "bg": { "$type": "color", "$value": "{color.interactive.primary}", "$description": "Primary button background" },
        "bg-hover": { "$type": "color", "$value": "{color.interactive.primary-hover}", "$description": "Primary button hover background" },
        "bg-active": { "$type": "color", "$value": "{color.interactive.primary-active}", "$description": "Primary button active background" },
        "text": { "$type": "color", "$value": "#FFFFFF", "$description": "Primary button text color" },
        "border": { "$type": "color", "$value": "transparent", "$description": "Primary button border color" }
      },
      "secondary": {
        "bg": { "$type": "color", "$value": "{color.background.secondary}", "$description": "Secondary button background" },
        "bg-hover": { "$type": "color", "$value": "{color.background.tertiary}", "$description": "Secondary button hover background" },
        "text": { "$type": "color", "$value": "{color.text.primary}", "$description": "Secondary button text color" },
        "border": { "$type": "color", "$value": "transparent", "$description": "Secondary button border color" }
      },
      "outline": {
        "bg": { "$type": "color", "$value": "transparent", "$description": "Outline button background" },
        "bg-hover": { "$type": "color", "$value": "{color.background.secondary}", "$description": "Outline button hover background" },
        "text": { "$type": "color", "$value": "{color.text.primary}", "$description": "Outline button text color" },
        "border": { "$type": "color", "$value": "{color.border.default}", "$description": "Outline button border color" }
      },
      "ghost": {
        "bg": { "$type": "color", "$value": "transparent", "$description": "Ghost button background" },
        "bg-hover": { "$type": "color", "$value": "{color.background.secondary}", "$description": "Ghost button hover background" },
        "text": { "$type": "color", "$value": "{color.text.primary}", "$description": "Ghost button text color" },
        "border": { "$type": "color", "$value": "transparent", "$description": "Ghost button border color" }
      },
      "danger": {
        "bg": { "$type": "color", "$value": "{color.interactive.danger}", "$description": "Danger button background" },
        "bg-hover": { "$type": "color", "$value": "{color.interactive.danger-hover}", "$description": "Danger button hover background" },
        "text": { "$type": "color", "$value": "#FFFFFF", "$description": "Danger button text color" },
        "border": { "$type": "color", "$value": "transparent", "$description": "Danger button border color" }
      },
      "focus-ring": { "$type": "color", "$value": "{color.border.focus}", "$description": "Button focus ring color" },
      "disabled-opacity": { "$type": "number", "$value": 0.5, "$description": "Button disabled state opacity" },
      "padding": {
        "x": {
          "$type": "dimension",
          "$value": "{space.component.padding.lg}",
          "$description": "Horizontal button padding"
        },
        "y": {
          "$type": "dimension",
          "$value": "{space.component.padding.sm}",
          "$description": "Vertical button padding"
        }
      },
      "height": {
        "sm": {
          "$type": "dimension",
          "$value": "{size.component.height.sm}",
          "$description": "Small button height"
        },
        "md": {
          "$type": "dimension",
          "$value": "{size.component.height.md}",
          "$description": "Medium button height (default)"
        },
        "lg": {
          "$type": "dimension",
          "$value": "{size.component.height.lg}",
          "$description": "Large button height"
        }
      },
      "gap": {
        "$type": "dimension",
        "$value": "{space.component.gap.sm}",
        "$description": "Gap between button icon and text"
      },
      "font": {
        "size": {
          "$type": "dimension",
          "$value": "{typography.size.sm}",
          "$description": "Button text size"
        },
        "weight": {
          "$type": "fontWeight",
          "$value": "{typography.weight.medium}",
          "$description": "Button text weight"
        }
      },
      "border": {
        "radius": {
          "$type": "dimension",
          "$value": "0.375rem",
          "$description": "Button border radius"
        },
        "width": {
          "$type": "dimension",
          "$value": "1px",
          "$description": "Button border width"
        }
      }
    }
  }
}
