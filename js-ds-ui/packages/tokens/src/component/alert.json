{
  "$description": "Component-specific tokens for Alert",
  "component": {
    "alert": {
      "default": {
        "bg": { "$type": "color", "$value": "{color.background.primary}", "$description": "Default alert background" },
        "text": { "$type": "color", "$value": "{color.text.primary}", "$description": "Default alert text color" },
        "border": { "$type": "color", "$value": "{color.border.default}", "$description": "Default alert border color" }
      },
      "info": {
        "bg": { "$type": "color", "$value": "{color.background.info}", "$description": "Info alert background" },
        "text": { "$type": "color", "$value": "{color.text.info}", "$description": "Info alert text color" },
        "border": { "$type": "color", "$value": "{color.text.info}", "$description": "Info alert border color" }
      },
      "warning": {
        "bg": { "$type": "color", "$value": "{color.background.warning}", "$description": "Warning alert background" },
        "text": { "$type": "color", "$value": "{color.text.warning}", "$description": "Warning alert text color" },
        "border": { "$type": "color", "$value": "{color.text.warning}", "$description": "Warning alert border color" }
      },
      "error": {
        "bg": { "$type": "color", "$value": "{color.background.error}", "$description": "Error alert background" },
