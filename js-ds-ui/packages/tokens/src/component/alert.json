        "border": { "$type": "color", "$value": "{color.text.success}", "$description": "Success alert border color" }
      },
      "padding": { "$type": "dimension", "$value": "{space.component.padding.md}", "$description": "Alert padding" },
      "font": {
        "size": { "$type": "dimension", "$value": "{typography.size.sm}", "$description": "Alert description text size" },
        "weight": { "$type": "fontWeight", "$value": "{typography.weight.medium}", "$description": "Alert title font weight" }
      },
      "border": {
        "radius": { "$type": "dimension", "$value": "0.5rem", "$description": "Alert border radius" },
        "width": { "$type": "dimension", "$value": "1px", "$description": "Alert border width" }
      }
    }
  }
}
