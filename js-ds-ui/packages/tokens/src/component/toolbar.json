{
  "$description": "Component-specific tokens for Toolbar",
  "component": {
    "toolbar": {
      "bg": { "$type": "color", "$value": "{color.background.primary}", "$description": "Toolbar background" },
      "border-color": { "$type": "color", "$value": "{color.border.default}", "$description": "Toolbar border color" },
      "separator-color": { "$type": "color", "$value": "{color.border.default}", "$description": "Toolbar separator color" },
      "padding": { "$type": "dimension", "$value": "{space.component.padding.xs}", "$description": "Toolbar content padding" },
      "gap": { "$type": "dimension", "$value": "{space.component.gap.sm}", "$description": "Toolbar item gap" },
      "border": {
        "radius": { "$type": "dimension", "$value": "0.375rem", "$description": "Toolbar border radius" }
      }
    }
  }
}
