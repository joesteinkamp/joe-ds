{
  "$description": "Component-specific tokens for DropdownMenu",
  "component": {
    "dropdown-menu": {
      "bg": { "$type": "color", "$value": "{color.background.primary}", "$description": "Dropdown menu background" },
      "text": { "$type": "color", "$value": "{color.text.primary}", "$description": "Dropdown menu text color" },
      "border-color": { "$type": "color", "$value": "{color.border.default}", "$description": "Dropdown menu border color" },
      "item-hover-bg": { "$type": "color", "$value": "{color.background.secondary}", "$description": "Dropdown menu item hover background" },
      "item-focus-bg": { "$type": "color", "$value": "{color.background.secondary}", "$description": "Dropdown menu item focus background" },
      "item-focus-text": { "$type": "color", "$value": "{color.text.primary}", "$description": "Dropdown menu item focus text" },
      "separator-color": { "$type": "color", "$value": "{color.border.default}", "$description": "Dropdown menu separator color" },
      "shortcut-text": { "$type": "color", "$value": "{color.text.tertiary}", "$description": "Dropdown menu shortcut text color" },
      "padding": { "$type": "dimension", "$value": "{space.component.padding.xs}", "$description": "Dropdown menu content padding" },
      "item-padding": {
        "x": { "$type": "dimension", "$value": "{space.component.padding.sm}", "$description": "Dropdown item horizontal padding" },
        "y": { "$type": "dimension", "$value": "{space.component.padding.xs}", "$description": "Dropdown item vertical padding" }
      },
      "border": {
        "radius": { "$type": "dimension", "$value": "0.375rem", "$description": "Dropdown menu border radius" }
      },
      "font": {
        "size": { "$type": "dimension", "$value": "{typography.size.sm}", "$description": "Dropdown menu text size" },
        "label-weight": { "$type": "fontWeight", "$value": "{typography.weight.semibold}", "$description": "Dropdown menu label font weight" }
      },
      "min-width": { "$type": "dimension", "$value": "8rem", "$description": "Dropdown menu minimum width" }
    }
  }
}
