{
  "$description": "Component-specific tokens for Avatar",
  "component": {
    "avatar": {
      "fallback-bg": { "$type": "color", "$value": "{color.background.secondary}", "$description": "Avatar fallback background" },
      "fallback-text": { "$type": "color", "$value": "{color.text.primary}", "$description": "Avatar fallback text color" },
      "border-color": { "$type": "color", "$value": "{color.border.default}", "$description": "Avatar border color" },
      "size": {
        "sm": { "$type": "dimension", "$value": "2rem", "$description": "Small avatar size" },
        "md": { "$type": "dimension", "$value": "2.5rem", "$description": "Medium avatar size (default)" },
        "lg": { "$type": "dimension", "$value": "3rem", "$description": "Large avatar size" }
      },
      "border": {
        "radius": { "$type": "dimension", "$value": "9999px", "$description": "Avatar border radius (circular)" }
      },
      "font": {
        "size": { "$type": "dimension", "$value": "{typography.size.sm}", "$description": "Avatar fallback text size" },
        "weight": { "$type": "fontWeight", "$value": "{typography.weight.medium}", "$description": "Avatar fallback text weight" }
      }
    }
  }
}
