{
  "$description": "Component-specific tokens for Badge",
  "component": {
    "badge": {
      "default": {
        "bg": { "$type": "color", "$value": "{color.interactive.primary}", "$description": "Default badge background" },
        "text": { "$type": "color", "$value": "#FFFFFF", "$description": "Default badge text color" },
        "border": { "$type": "color", "$value": "transparent", "$description": "Default badge border color" }
      },
      "secondary": {
        "bg": { "$type": "color", "$value": "{color.background.secondary}", "$description": "Secondary badge background" },
        "text": { "$type": "color", "$value": "{color.text.primary}", "$description": "Secondary badge text color" },
        "border": { "$type": "color", "$value": "transparent", "$description": "Secondary badge border color" }
      },
      "outline": {
        "bg": { "$type": "color", "$value": "transparent", "$description": "Outline badge background" },
        "text": { "$type": "color", "$value": "{color.text.primary}", "$description": "Outline badge text color" },
        "border": { "$type": "color", "$value": "{color.border.default}", "$description": "Outline badge border color" }
      },
      "destructive": {
        "bg": { "$type": "color", "$value": "{color.text.error}", "$description": "Destructive badge background" },
        "text": { "$type": "color", "$value": "#FFFFFF", "$description": "Destructive badge text color" },
        "border": { "$type": "color", "$value": "transparent", "$description": "Destructive badge border color" }
      },
      "success": {
        "bg": { "$type": "color", "$value": "{color.text.success}", "$description": "Success badge background" },
        "text": { "$type": "color", "$value": "#FFFFFF", "$description": "Success badge text color" },
        "border": { "$type": "color", "$value": "transparent", "$description": "Success badge border color" }
      },
      "warning": {
        "bg": { "$type": "color", "$value": "{color.text.warning}", "$description": "Warning badge background" },
        "text": { "$type": "color", "$value": "#FFFFFF", "$description": "Warning badge text color" },
        "border": { "$type": "color", "$value": "transparent", "$description": "Warning badge border color" }
      },
      "focus-ring": { "$type": "color", "$value": "{color.border.focus}", "$description": "Badge focus ring color" },
      "padding": {
        "x": { "$type": "dimension", "$value": "0.625rem", "$description": "Badge horizontal padding" },
        "y": { "$type": "dimension", "$value": "0.125rem", "$description": "Badge vertical padding" }
      },
      "font": {
        "size": { "$type": "dimension", "$value": "{typography.size.xs}", "$description": "Badge text size" },
        "weight": { "$type": "fontWeight", "$value": "{typography.weight.semibold}", "$description": "Badge text weight" }
      },
      "border": {
        "radius": { "$type": "dimension", "$value": "9999px", "$description": "Badge border radius (pill shape)" },
        "width": { "$type": "dimension", "$value": "1px", "$description": "Badge border width" }
      }
    }
  }
}
