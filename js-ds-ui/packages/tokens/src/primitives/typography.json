{
  "font": {
    "family": {
      "$type": "fontFamily",
      "sans": {
        "$value": ["Inter", "system-ui", "-apple-system", "BlinkMacSystemFont", "Segoe UI", "Roboto", "sans-serif"],
        "$description": "Default sans-serif font stack"
      },
      "mono": {
        "$value": ["JetBrains Mono", "Consolas", "Monaco", "Courier New", "monospace"],
        "$description": "Monospace font stack for code"
      }
    },
    "size": {
      "$type": "dimension",
      "xs": {
        "$value": "clamp(0.625rem, calc(0.575rem + 0.25vw), 0.75rem)",
        "$description": "10-12px - Extra small text"
      },
      "sm": {
        "$value": "clamp(0.75rem, calc(0.7rem + 0.25vw), 0.875rem)",
        "$description": "12-14px - Small text"
      },
      "base": {
        "$value": "clamp(0.875rem, calc(0.825rem + 0.25vw), 1rem)",
        "$description": "14-16px - Body text"
      },
      "lg": {
        "$value": "clamp(1rem, calc(0.95rem + 0.25vw), 1.125rem)",
        "$description": "16-18px - Large text"
      },
      "xl": {
        "$value": "clamp(1.125rem, calc(1.05rem + 0.375vw), 1.25rem)",
        "$description": "18-20px - Extra large"
      },
      "2xl": {
        "$value": "clamp(1.25rem, calc(1.15rem + 0.5vw), 1.5rem)",
        "$description": "20-24px - Heading 4"
      },
      "3xl": {
        "$value": "clamp(1.5rem, calc(1.35rem + 0.75vw), 1.875rem)",
        "$description": "24-30px - Heading 3"
      },
      "4xl": {
        "$value": "clamp(1.875rem, calc(1.65rem + 1.125vw), 2.25rem)",
        "$description": "30-36px - Heading 2"
      },
      "5xl": {
        "$value": "clamp(2.25rem, calc(1.95rem + 1.5vw), 3rem)",
        "$description": "36-48px - Heading 1"
      }
    },
    "weight": {
      "$type": "fontWeight",
      "normal": {
        "$value": "400"
      },
      "medium": {
        "$value": "500"
      },
      "semibold": {
        "$value": "600"
      },
      "bold": {
        "$value": "700"
      }
    },
    "lineHeight": {
      "$type": "number",
      "tight": {
        "$value": "1.25"
      },
      "normal": {
        "$value": "1.5"
      },
      "relaxed": {
        "$value": "1.75"
      }
    }
  }
}
