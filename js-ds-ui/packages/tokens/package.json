{
  "name": "@js-ds-ui/tokens",
  "version": "0.1.0",
  "description": "Design tokens for js-ds-ui following DTCG standards",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./css": "./dist/primitives.css",
    "./css/primitives": "./dist/primitives.css",
    "./css/semantic": "./dist/semantic.css",
    "./css/components": "./dist/components.css",
    "./types": "./dist/types.d.ts",
    "./json": "./dist/tokens.json",
    "./ios": "./dist/ios/DesignTokens.swift",
    "./android": "./dist/android/DesignTokens.kt"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm run clean && npm run tokens:build && npm run types:generate",
    "tokens:build": "style-dictionary build --config config/style-dictionary.config.js",
    "types:generate": "tsx scripts/generate-types.ts",
    "clean": "rm -rf dist generated",
    "dev": "npm run build -- --watch",
    "figma:push": "tsx scripts/figma/sync-to-figma.ts",
    "figma:pull": "tsx scripts/figma/sync-from-figma.ts",
    "figma:preview": "DRY_RUN=true tsx scripts/figma/sync-to-figma.ts"
  },
  "dependencies": {
    "@csstools/postcss-oklab-function": "^4.0.7",
    "postcss": "^8.4.49"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "style-dictionary": "^4.2.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}
